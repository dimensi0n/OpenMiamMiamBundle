{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    {% set product = form.vars.data %}
    <h1>{{ 'admin.producer.products.form.edit_title'|trans({'%name%': product.name, '%ref%': product.ref}) }}</h1>

    <div class="alert alert-warning row" role="alert">
        <div class="col-md-6">
            <span class="glyphicon glyphicon-info-sign" style="color: #FFA500;"></span> Conseil: La photo du produit est de mauvaise qualité, vous pouvez la modifier dans la partie 'Image et description'<br><br>
            <p><a data-toggle="collapse" href="#footwear" aria-expanded="false" aria-controls="footwear">Certains éléments sont manquants (2)</a></p>
            <div class="collapse" id="footwear">
                <ul>
                  <li>L'image est manquante</li>
                  <li>La description est manquante</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <p style="text-align: center">Indice de complétion : </p>

            <div class="progress" style="width: 50%; margin-left: 25%">
                <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div><br>
            </div>
        </div>
    </div>
    {% include 'IsicsOpenMiamMiamBundle:Admin:Producer\\Product\\form.html.twig' with {'form': form} %}
    {% include 'IsicsOpenMiamMiamBundle:Admin:Producer\\Product\\deleteDialog.html.twig' %}

    {% include 'IsicsOpenMiamMiamBundle:Admin:activityStream.html.twig' %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            new OpenMiamMiam.PanelForm;
            new OpenMiamMiam.ProducerProductForm;
            new OpenMiamMiam.DeleteDialog;
        });
    </script>
    {{ tinymce_init() }}
{% endblock %}
